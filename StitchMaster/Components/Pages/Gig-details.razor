@page "/gig-details/{GigId:int}"
@using StitchMaster
@inject NavigationManager Navigation

<div class="container my-2">
    <div class="row">
        <!-- Left Column: Gig Image and Description -->
        <div class="col-md-8">
            <img src="/gigPhoto3.jpg" alt="Gig Imag" class="img-fluid rounded mb-3 shadow"  style="width:700px; height:400px;"/>

            <h2>gig.Title</h2>
            <p class="text-muted">Category:gig.Category is here</p> 

            <div class="mb-3">
                <h5>Description</h5>
                <p>gig.Description</p>
            </div>

           
        </div>

        <!-- Right Column: Seller Info and Order Box -->
        <div class="col-md-4">
            <div class="card p-3 shadow">
                <div class="d-flex align-items-center mb-3">
                    <img src="/gigPhoto2.jpg" alt="Seller" class="rounded-circle me-2" style="width: 50px; height: 50px;" />
                    <div>
                        <strong>gig.SellerName</strong><br />
                        <small>Top Rated Seller</small>
                    </div>
                </div>

                <div class="mb-2">
                    <strong>Delivery:</strong> gig.DeliveryTime
                </div>
                <div class="mb-3">
                    <strong>Price:</strong> $gig.Price
                </div>

                <button class="btn btn-success w-100">Continue ($gig.Price)</button>
            </div>
        </div>
    </div>
</div>


@code {
	[Parameter] public int GigId { get; set; }
}
