@page "/signup/signup-as";
<!DOCTYPE html>
<html>
<head>
    <title>User Type Selection</title>
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 2rem;
            padding: 20px;
        }

        .card {
            cursor: pointer;
            background-color: white;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            border-radius: 1rem;
            padding: 2.5rem;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            width: 16rem;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
            }

        .card-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .buyer-icon {
            color: #6366f1;
        }

        .tailor-icon {
            color: #10b981;
        }

        .fabric-icon {
            color: #f97316;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .card-description {
            color: #6b7280;
        }
    </style>
</head>
<body>
    <h1 class="primary-text" style="text-align: center">Select Account Type</h1>
    <div class="card-container">
        <!-- Buyer Card -->
        <div class="card" @onclick= "@(()=> NavigateTo(UserType.Customer))">
            <div class="card-icon buyer-icon">
                <i class="fas fa-user-tie"></i> <!-- Professional buyer icon -->
            </div>
            <h2 class="card-title">Buyer</h2>
            <p class="card-description">Sign up to browse and order tailored clothing.</p>
        </div>

        <!-- Tailor Card -->
        <div class="card" @onclick= "@(()=> NavigateTo(UserType.Tailor))">
            <div class="card-icon tailor-icon">
                <i class="fas fa-cut"></i> <!-- Scissors icon -->
            </div>
            <h2 class="card-title">Tailor</h2>
            <p class="card-description">Sign up to manage tailoring orders and services.</p>
        </div>

        <!-- Fabric Store Card -->
        <div class="card" @onclick= "@(()=> NavigateTo(UserType.FabricStore))">
            <div class="card-icon fabric-icon">
                <i class="fas fa-tshirt"></i> <!-- Fabric roll icon -->
            </div>
            <h2 class="card-title">Fabric Store</h2>
            <p class="card-description">Sign up to sell fabrics and materials.</p>
        </div>
    </div>
</body>
</html>