@page "/tailor/my-orders/detail/{TailorOrderID:int}"
<PageTitle>Details</PageTitle>

@using StitchMaster.BusinessLogic;
@using StitchMaster.DataLayer;

@inject NavigationManager Navigation
@inject UserStateService UserState

<style>
    .order-container {
        max-width: 700px;
        margin: 50px auto;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        padding: 40px;
        border: 1px solid #e5e7eb;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .order-header {
        font-size: 2rem;
        font-weight: bold;
        color: #1f2937;
        text-align: center;
        margin-bottom: 30px;
    }

    .order-info {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #f1f1f1;
    }

        .order-info span {
            font-size: 1rem;
            color: #374151;
        }

        .order-info .label {
            font-weight: 600;
            color: #6b7280;
        }

    .order-price {
        color: #16a34a;
        font-weight: 700;
    }

    .back-button {
        margin-top: 40px;
        display: inline-block;
        background-color: #2563eb;
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .back-button:hover {
            background-color: #1e40af;
        }

    .loading {
        text-align: center;
        color: gray;
        font-size: 1.2rem;
        margin-top: 80px;
    }

    .complete-button {
        margin-top: 20px;
        margin-left: 10px;
        background-color: #10b981; /* emerald-500 */
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .complete-button:hover {
            background-color: #059669; /* emerald-600 */
            transform: scale(1.02);
        }

        .complete-button:active {
            background-color: #047857; /* emerald-700 */
        }


</style>

@if (order == null)
{
    <div class="loading">Loading order details...</div>
}
else
{
    @Refresh;
    <div class="order-container">
        <h2 class="order-header">🧵 Order Details</h2>

        <div class="order-info">
            <span class="label">Customer Name:</span>
            <span>@order.Customer.FullName</span>
        </div>

        <div class="order-info">
            <span class="label">Description:</span>
            <span>@order.Description</span>
        </div>

        <div class="order-info">
            <span class="label">Fabric:</span>
            <span>@order.FabricPurchased.FabricProduct.FabricProductTitle</span>
        </div>

        <div class="order-info">
            <span class="label">Color:</span>
            <span>@order.FabricPurchased.FabricProduct.FabricColor.ColorName</span>
        </div>

        <div class="order-info">
            <span class="label">Price:</span>
            <span class="order-price">Rs. @order.Price</span>
        </div>

        <div class="order-info">
            <span class="label">Order Date:</span>
            <span>@order.OrderDateTime.ToString("MMMM dd, yyyy")</span>
        </div>

        <div style="text-align:center;">
            <button class="back-button" @onclick="GoBack">Back to Orders</button>
        </div>
        <div style="text-align:center;">
            <button class="complete-button" @onclick="MarkComplete">Mark Complete</button>
        </div>
    </div>
}
