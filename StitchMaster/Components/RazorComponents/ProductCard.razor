
<a class="product-card card p-3 mb-4 shadow-sm rounded-4" href="/product-details/@ProductId" style="width: 320px; text-decoration:none;">
    <img src="@ProductImageUrl" alt="Product Image" class="product-img mb-3 rounded-2" />

    <div class="product-info mb-3">
        <h5 class="fw-bold">@ProductName</h5>
        <p class="text-muted small">@Description</p>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-2">
        <span class="text-success fw-bold fs-5">$@Price.ToString("0.00")</span>
        <span class="badge bg-primary">@Category</span>
    </div>

    <div class="d-flex align-items-center">
        <img src="@SellerAvatarUrl" alt="Seller Avatar" class="rounded-circle me-2" style="width: 35px; height: 35px;" />
        <span class="text-dark">@SellerName</span>
    </div>
</a>

@code {
    [Parameter] public string ProductImageUrl { get; set; }
    [Parameter] public int ProductId { get; set; }
    [Parameter] public string ProductName { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public decimal Price { get; set; }
    [Parameter] public string SellerName { get; set; }
    [Parameter] public string SellerAvatarUrl { get; set; } = "https://via.placeholder.com/35";
    [Parameter] public string Category { get; set; } = "General";
}
